<Window x:Class="SmashyKeys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmashyKeys"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Topmost="True"
        Background="Black"
        Cursor="None"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        MouseDown="Window_MouseDown"
        MouseMove="Window_MouseMove"
        MouseWheel="Window_MouseWheel"
        MouseRightButtonDown="Window_MouseRightButtonDown">

    <Grid>
        <!-- Colorful gradient background that changes -->
        <Border x:Name="BackgroundBorder">
            <Border.Background>
                <LinearGradientBrush x:Name="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1a1a2e" Offset="0"/>
                    <GradientStop Color="#16213e" Offset="0.5"/>
                    <GradientStop Color="#0f3460" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Main canvas for all visual effects -->
        <Canvas x:Name="EffectsCanvas" />

        <!-- Floating bouncy objects that persist -->
        <Canvas x:Name="FloatingCanvas" />

        <!-- Welcome message (fades out after first keypress) -->
        <StackPanel x:Name="WelcomePanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Opacity="0.8">
            <TextBlock Text="ðŸŽ¨ SmashyKeys! ðŸŽ¨"
                       FontSize="72"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Cyan" BlurRadius="20" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock Text="Press any key or click anywhere!"
                       FontSize="32"
                       Foreground="LightGray"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
            <TextBlock Text="(Parent exit: Hold Ctrl+Shift+Q for 2 seconds)"
                       FontSize="16"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0,40,0,0"/>
        </StackPanel>

        <!-- Exit countdown indicator (hidden by default) -->
        <Border x:Name="ExitIndicator"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,50,0,0"
                Background="#80000000"
                CornerRadius="10"
                Padding="20,10"
                Visibility="Collapsed">
            <TextBlock x:Name="ExitText"
                       Text="Keep holding to exit..."
                       FontSize="24"
                       Foreground="White"/>
        </Border>

        <!-- Custom cursor overlay (hollow circle) -->
        <Canvas x:Name="CursorCanvas" IsHitTestVisible="False">
            <Ellipse x:Name="CursorCircle"
                     Width="50"
                     Height="50"
                     Stroke="White"
                     StrokeThickness="3"
                     Fill="Transparent"
                     Opacity="0.7">
                <Ellipse.Effect>
                    <DropShadowEffect Color="Cyan" BlurRadius="10" ShadowDepth="0"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>
    </Grid>
</Window>
